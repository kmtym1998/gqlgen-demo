# GraphQL schema example
#
# https://gqlgen.com/getting-started/

# queries ========================================
type Query {
  todos: [Todo!]!
  test: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}

# types ==========================================
type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

# inputs =========================================
input NewTodo {
  text: String!
  userId: String!
}
